<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-black text-light">

    <div class="container text-center mt-5" style="max-width: 800px;">
        <h2 class="mb-4 text-warning">Registered Users</h2>

        <% if (users.length === 0) { %>
            <p class="text-muted">No users found.</p>
        <% } else { %>
            <% users.forEach(user => { %>
                <div class="bg-dark text-light p-3 my-4" style="border-radius: 10px; border: 2px solid yellowgreen">
                    <img src="<%= user.profileImg %>" 
                        alt="Profile Picture"
                        style="width: 200px; height: 200px; border-radius: 100%; border: 3px solid yellowgreen; object-fit: cover;">
                    
                    <div class="mt-3">
                        <h4><%= user.name %></h4>
                        <h5 class="text-muted"><%= user.email %></h5>
                    </div>
                </div>
            <% }) %>
        <% } %>

        <div class="my-4">
            <a href="/login" class="btn btn-danger">Log Out</a>
            <a href="/login" class="btn btn-info">Login</a>
        </div>
    </div>

</body>
</html>
